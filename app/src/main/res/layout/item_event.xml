<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="60dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_row_date"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="22"
            android:textAlignment="center"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tv_row_month"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="июля"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="12sp"/>
    </LinearLayout>


    <View
        android:background="@drawable/background_timed_event"
        android:layout_width="40dp"
        android:layout_height="match_parent"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_project"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:foreground="?android:selectableItemBackground"
        card_view:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_row_project"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#987"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_row_descr"
                android:layout_alignParentLeft="true"
                android:background="#66000000"
                android:paddingLeft="16dp"
                android:textColor="#fff"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tv_row_descr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#66000000"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:text=""
                android:textColor="#fff" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
