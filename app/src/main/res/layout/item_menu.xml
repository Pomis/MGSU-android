<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="-5dp"
    android:layout_marginTop="-5dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_row_title"
        android:textColor="@color/colorWhite"
        android:layout_toLeftOf="@+id/iv_row_hexagon"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginTop="-4dp"
        android:gravity="center_vertical"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_row_hexagon"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_toLeftOf="@+id/v_row_padding"
        android:scaleType="centerInside"
        android:src="@drawable/background_hexagon" />

    <ImageView
        android:id="@+id/iv_row_icon"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="22dp"
        android:layout_toLeftOf="@+id/v_row_padding"
        android:scaleType="center"
        android:src="@drawable/ic_menu_gallery"
        android:tint="@color/colorWhite" />

    <View
        android:id="@+id/v_row_padding"
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true" />
</RelativeLayout>